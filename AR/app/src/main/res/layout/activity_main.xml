<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scene_from_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/bear"
                android:layout_width="100dp"
                android:src="@drawable/bear"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/cat"
                android:layout_width="100dp"
                android:src="@drawable/cat"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/cow"
                android:layout_width="100dp"
                android:src="@drawable/cow"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/dog"
                android:layout_width="100dp"
                android:src="@drawable/dog"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/elephant"
                android:layout_width="100dp"
                android:src="@drawable/elephant"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/ferret"
                android:layout_width="100dp"
                android:src="@drawable/ferret"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/hippopotamus"
                android:layout_width="100dp"
                android:src="@drawable/hippopotamus"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/horse"
                android:layout_width="100dp"
                android:src="@drawable/horse"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/koala_bear"
                android:layout_width="100dp"
                android:src="@drawable/koala_bear"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/lion"
                android:layout_width="100dp"
                android:src="@drawable/lion"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/reindeer"
                android:layout_width="100dp"
                android:src="@drawable/reindeer"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/wolverine"
                android:layout_width="100dp"
                android:src="@drawable/wolverine"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </HorizontalScrollView>

</FrameLayout>